<Page x:Class="Pract_12.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract_12.Pages"
      xmlns:conv="clr-namespace:Pract_12.Converter"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <conv:ValidationConverter  x:Key="ValidationConverter"/>
        <conv:ProfConverter  x:Key="ProfConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Style="{DynamicResource MaterialDesignFlatButton}" Click="go_form">Добавить</Button>
            <Button Style="{DynamicResource MaterialDesignFlatButton}" Click="remove">Удалить</Button>
        </StackPanel>
        <ListView Grid.Row="1" ItemsSource="{Binding service.Users}" MouseDoubleClick="Edit" SelectedItem="{Binding student}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel>
                            <!--<TextBlock Text="{Binding LastName}"/>
                            <TextBlock Text="{Binding FirstName}"/>
                            <TextBlock Text="{Binding MiddleName}"/>
                            <TextBlock Text="{Binding Birthday, StringFormat={}{0:dd.MM.yyyy}}"/>-->
                            <TextBlock Text="{Binding Login}"/>
                            <TextBlock Text="{Binding Name}"/>
                            <TextBlock Text="{Binding Email}"/>
                            <TextBlock Text="{Binding Password}"/>
                            <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy}}"/>
                        </StackPanel>
                        <DockPanel Margin="0 10">
                            <TextBlock DockPanel.Dock="Right">Информация</TextBlock>
                            <TextBlock TextWrapping="Wrap" Visibility="{Binding UserProfile.Phone,Converter={StaticResource VisibilityConverter}}">
                            <Run Text="Телефон: "/>
                            <Run Text="{Binding UserProfile.Phone}"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Visibility="{Binding UserProfile.Birthday, Converter={StaticResource ProfConverter}}">
                                <Run Text="День Рождение: "/>
                                <Run Text="{Binding UserProfile.Birthday}"/>       
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Visibility="{Binding UserProfile.Bio, Converter={StaticResource ProfConverter}}">
                                <Run Text="Описание: "/>
                                <Run Text="{Binding UserProfile.Bio}"/>
                            </TextBlock>
                        </DockPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
