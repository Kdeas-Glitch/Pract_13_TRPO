<Page x:Class="Pract_12.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract_12.Pages"
      xmlns:conv="clr-namespace:Pract_12.ValidationRules"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Page.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Style="{DynamicResource MaterialDesignFlatButton}" Click="go_form">Добавить</Button>
            <Button Style="{DynamicResource MaterialDesignFlatButton}" Click="remove">Удалить</Button>
            <Button Style="{DynamicResource MaterialDesignFlatButton}" Click="Roles">Роли</Button>
        </StackPanel>
        <ListView Grid.Row="1" ItemsSource="{Binding service.Users}" MouseDoubleClick="Edit" SelectedItem="{Binding student}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding UserProfile.AvatarUrl}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock >
                            <Run Text="Аватар: "/>
                            </TextBlock>
                            <Image Width="50" Height="50" 
       Source="{Binding UserProfile.AvatarUrl}"
       Visibility="{Binding UserProfile.AvatarUrl, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="{Binding Login}"/>
                            <TextBlock Text="{Binding Name}"/>
                            <TextBlock Text="{Binding Email}"/>
                            <TextBlock Text="{Binding Password}"/>
                            <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy}}"/>
                            <TextBlock Text="{Binding Role.Title}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 10">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding UserProfile.Phone}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                        <TextBlock DockPanel.Dock="Right">Информация</TextBlock>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                        <DataTrigger Binding="{Binding UserProfile.Phone}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                            <TextBlock >
                                <Run Text="Телефон: "/>
                                <Run Text="{Binding UserProfile.Phone}"/>
                            </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding UserProfile.Birthday}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock >
                                        <Run Text="День рождения: "/> 
                                        <Run Text="{Binding UserProfile.Birthday}"/>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding UserProfile.Bio}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock >
                                    <Run Text="Описание: "/> 
                                    <Run Text="{Binding UserProfile.Bio}"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
