<Page x:Class="Pract_12.Pages.UserProfileFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract_12.Pages"
       xmlns:validators="clr-namespace:Pract_12.ValidationRules"
        xmlns:m="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:conv="clr-namespace:Pract_12.Converter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserProfileFormPage">
    <Page.Resources>
        <conv:ValidationConverter  x:Key="ValidationConverter"/>
    </Page.Resources>
    <StackPanel>
        <StackPanel>
        <Label>Аватар(ссылка)</Label>
            <TextBox m:HintAssist.Hint="Avatar" >
            <Binding Path="AvatarUrl" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True">
                <Binding.ValidationRules>
                    <validators:RequiredRule/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
    </StackPanel>
    <StackPanel>
        <Label>Номер Телефона</Label>
            <TextBox m:HintAssist.Hint="Phone">
            <Binding Path="Phone" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True">
                <Binding.ValidationRules>
                    <validators:RequiredRule/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
    </StackPanel>
    <StackPanel>
        <Label>День рождение</Label>
            <TextBox m:HintAssist.Hint="Birthday">
            <Binding Path="Birthday" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True">
                <Binding.ValidationRules>
                    <validators:RequiredRule/>
                    <validators:DateValidation/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
    </StackPanel>
    <StackPanel>
        <Label>Описание</Label>
            <TextBox m:HintAssist.Hint="Bio">
            <Binding Path="Bio" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True">
                <Binding.ValidationRules>
                    <validators:RequiredRule/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
    </StackPanel>
        <StackPanel>
            <Button Click="save" Content="Сохранить в БД" Cursor="Hand">
                <Button.IsEnabled>
                    <MultiBinding Converter="{StaticResource ValidationConverter}">
                        <Binding ElementName="login" Path="(Validation.HasError)" />
                        <Binding ElementName="name" Path="(Validation.HasError)" />
                        <Binding ElementName="email" Path="(Validation.HasError)" />
                        <Binding ElementName="passw" Path="(Validation.HasError)" />
                        <Binding ElementName="date" Path="(Validation.HasError)" />
                    </MultiBinding>
                </Button.IsEnabled>
            </Button>
            <Button Click="back">Назад</Button>
        </StackPanel>
    </StackPanel>
</Page>
