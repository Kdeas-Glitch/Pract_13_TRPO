<Page x:Class="Pract_12.Pages.StudentFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract_12.Pages"
      xmlns:m="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:validators="clr-namespace:Pract_12.ValidationRules"
      xmlns:conv="clr-namespace:Pract_12.Converter"
      xmlns:service="clr-namespace:Pract_12.Service"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserFormPage">
    <Page.Resources>
        <conv:ValidationConverter  x:Key="ValidationConverter"/>
        <service:RolesService x:Key="rService"/>
    </Page.Resources>
    <Grid>
        <StackPanel>
            <StackPanel>
                <Label>Login</Label>
                <TextBox x:Name="login" m:HintAssist.Hint="Login">
                    <TextBox.Text>
                        <Binding Path="Login" UpdateSourceTrigger="PropertyChanged"
             ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <validators:RequiredRule/>
                                <validators:LoginValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel>
                <Label>Name</Label>
                <TextBox x:Name="name" m:HintAssist.Hint="Name" >
                    <TextBox.Text>
                        <Binding Path="Name" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <validators:RequiredRule/>
                                <validators:LoginValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel>
                <Label>Email</Label>
                <TextBox x:Name="email" m:HintAssist.Hint="Email">
                    <TextBox.Text>
                        <Binding Path="Email" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <validators:RequiredRule/>
                                <validators:MailValid/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel>
                <Label>Password</Label>
                <TextBox x:Name="passw" m:HintAssist.Hint="Password">
                    <TextBox.Text>
                        <Binding Path="Password" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <validators:RequiredRule/>
                                <validators:PasswordValid/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel>
                <Label>Дата CreatedAt</Label>
                <TextBox x:Name="date" m:HintAssist.Hint="Date">
                    <TextBox.Text>
                        <Binding Path="CreatedAt" UpdateSourceTrigger="PropertyChanged"
ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <validators:DateValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel>
                <Label>Роль</Label>
                <ComboBox m:HintAssist.Hint="Роли"
                    ItemsSource="{Binding Source={StaticResource rService},Path=Roles}"
                          DisplayMemberPath="Title"
                          SelectedItem="{Binding Role}"/>
            </StackPanel>

            <StackPanel>
                <Button Click="Profile" Content="Профайл">

                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource ValidationConverter}">
                            <Binding ElementName="login" Path="(Validation.HasError)" />
                            <Binding ElementName="name" Path="(Validation.HasError)" />
                            <Binding ElementName="email" Path="(Validation.HasError)" />
                            <Binding ElementName="passw" Path="(Validation.HasError)" />
                            <Binding ElementName="date" Path="(Validation.HasError)" />
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
                <Button Click="save" Content="Сохранить в БД">
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource ValidationConverter}">
                            <Binding ElementName="login" Path="(Validation.HasError)" />
                            <Binding ElementName="name" Path="(Validation.HasError)" />
                            <Binding ElementName="email" Path="(Validation.HasError)" />
                            <Binding ElementName="passw" Path="(Validation.HasError)" />
                            <Binding ElementName="date" Path="(Validation.HasError)" />
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
                <Button Click="back">Назад</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
